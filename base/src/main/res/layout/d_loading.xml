<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/d_common_bg"
    android:orientation="vertical"
    android:padding="@dimen/normal_width_10">

    <com.yunlong.base.view.LoadingView
        android:layout_width="@dimen/normal_width_100"
        android:layout_height="@dimen/normal_width_50"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/normal_width_10"
        app:lv_bottom_text_fill_color="@color/base_normal_color"
        app:lv_bottom_text_stroke_color="@color/white"
        app:lv_fill_color="@color/base_normal_color"
        app:lv_stroke_radius="@dimen/normal_width_5"
        app:lv_text="@string/base_git_book"
        app:lv_text_size="@dimen/text_size_normal_5"
        app:lv_text_stroke_width="@dimen/normal_width_2"
        app:lv_top_text_fill_color="@color/white"
        app:lv_top_text_stroke_color="@color/base_normal_color" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_width_10"
        android:gravity="center"
        android:textColor="@color/color_normal_3"
        android:textSize="@dimen/text_size_normal_4" />

</LinearLayout>